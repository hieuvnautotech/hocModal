<div class="header bg-primary pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Register ESD</h6>
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
              <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item"><a href="#">Register ESD</a></li>
                <li class="breadcrumb-item active" aria-current="page">Register ESD</li>
              </ol>
            </nav>
          </div>    
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col">
        <div class="card">
          
          <!-- Add ESD new -->
          <button id="modal-btn" class="button">Click Here</button>
          
          <div id="my-modal" class="modal">
            <div class="modal-content">
              <div class="modal-header">
                <span class="close">&times;</span>
                <h2>Modal Header</h2>
              </div>
              <div class="modal-body">



                <!-- <p>This is my modal</p>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Nulla repellendus nisi, sunt consectetur ipsa velit
                  repudiandae aperiam modi quisquam nihil nam asperiores doloremque mollitia dolor deleniti quibusdam nemo
                  commodi ab.</p> -->
                    <div id="signup">
                      <form class="form" action="/api/iotInfo" method="POST">
                        <p class="fieldset">
                          <label class="image-replace username" for="signup-username">ESD name</label>
                          <input class="full-width has-padding has-border" name="id" type="hidden" value="">
                          <input class="full-width has-padding has-border" name="esdName" type="text" placeholder="ESD name">
                          <span class="error-message">Your ESD name can only contain numeric and alphabetic symbols!</span>
                        </p>
                    
                        <p class="fieldset">
                          <label class="image-replace email" for="signup-email">Location</label>
                          <input class="full-width has-padding has-border" name="id" type="hidden" value="">
                          <input class="full-width has-padding has-border" name="location" type="text" placeholder="Location">
                          <span class="error-message">Your location can only contain numeric and alphabetic symbols!</span>
                        </p>
                    
                    
                    
                    
                    
                        <p class="fieldset">
                          <button type="submit" class="btn text-dark update">Save</button>
                          <button id="closeModal" type="button" class="btn text-dark update">Cancel</button>
                        </p>
                      </form>
                    
                    </div>






              </div>
              <div class="modal-footer">
                <h3>Modal Footer</h3>
              </div>
            </div>
          </div>


          

          <!-- Light table -->
          <div class="table-responsive">
            <table class="table align-items-center table-flush">
              <thead class="thead-light">
                <tr>
                  <th scope="col" class="sort" data-sort="ID">ID</th>
                  <th scope="col" class="sort" data-sort="ESDName">ESD Name</th>
                  <th scope="col" class="sort" data-sort="Location">Location</th>
                  <th scope="col" class="sort" data-sort="Date">Date</th>
                  <th scope="col" class="sort" data-sort="Action">Action</th>
                  
                </tr>
              </thead>
              <tbody class="list">
                        <%- include('_showEsdInfo') %>

                
                
                
              </tbody>
            </table>
          </div>
          <!-- Card footer -->
          <div class="card-footer py-4">
            <nav aria-label="...">
              <ul class="pagination justify-content-end mb-0">
                <li class="page-item disabled">
                  <a class="page-link" href="#" tabindex="-1">
                    <i class="fas fa-angle-left"></i>
                    <span class="sr-only">Previous</span>
                  </a>
                </li>
                <li class="page-item active">
                  <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                  <a class="page-link" href="#">
                    <i class="fas fa-angle-right"></i>
                    <span class="sr-only">Next</span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <!-- Dark table -->
    
    <!-- Footer -->
  </div>



